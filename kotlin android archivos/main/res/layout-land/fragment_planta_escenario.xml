<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    tools:context=".planta.PlantaEscenarioFragment">

    <ImageView
        android:id="@+id/escenarioImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/escenarioplanta"

        android:scaleType="fitCenter"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/elementContainer"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/btnToggleSound"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/ic_toggle_sound_modern"
            android:background="@android:color/transparent"
            app:tint="@color/botonesnegrosyblancostexto"
            android:scaleType="centerInside"
            android:padding="14dp"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/btnAddElement"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_mastres"
            android:background="@android:color/transparent"

            app:tint="@color/botonesnegrosyblancostexto"
            android:scaleType="centerInside"
            android:padding="14dp"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/btnEscena"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginBottom="6dp"
            android:src="@drawable/ic_savenegro"
            android:background="@android:color/transparent"
            app:tint="@color/botonesnegrosyblancostexto"
            android:scaleType="centerInside"
            android:padding="14dp"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</FrameLayout>
