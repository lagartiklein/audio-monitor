<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/canalContainer"
    android:layout_width="wrap_content"
    android:layout_height="400dp">

    <!-- Layout principal del canal con diseño moderno -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mainCanalLayout"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/botonesnegrosyblancos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:background="@android:color/transparent">

            <!-- Header moderno -->
            <LinearLayout
                android:id="@+id/headerCanal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="6dp"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/seekBarFader">

                <!-- Número de canal con diseño moderno -->
                <TextView
                    android:id="@+id/tvNumeroCanal"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="#1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_numero_canal_modern"
                    android:layout_gravity="center"
                    android:textColor="@color/botonesnegrosyblancos"
                    android:elevation="3dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="?attr/colorPrimary"
                    android:foreground="?attr/selectableItemBackground"
                    android:longClickable="false" />

                <!-- Nombre del canal -->
                <TextView
                    android:id="@+id/tvNombreCanal"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="2"
                    android:textColor="@color/botonesnegrosyblancos"
                    android:background="@drawable/bg_numero_canal_modern"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:text=""
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="2dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:backgroundTint="?attr/colorPrimary"
                android:foreground="?attr/selectableItemBackground" />
            </LinearLayout>

            <!-- Fader vertical moderno -->
            <com.cepalabsfree.fichatech.fichatecnica.VerticalSeekBar
                android:id="@+id/seekBarFader"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:max="100"
                android:progress="0"
                android:splitTrack="false"

                app:layout_constraintTop_toBottomOf="@id/headerCanal"
                app:layout_constraintBottom_toTopOf="@id/botonesLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="100dp" />


            <ImageButton
                android:id="@+id/btnDragHandle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                app:tint="@color/botonesnegrosyblancostexto"
                android:src="@drawable/ic_manin"
                android:contentDescription="@string/guardar"
                android:scaleType="centerInside"
                android:padding="12dp"
                app:layout_constraintTop_toBottomOf="@id/seekBarFader"
                app:layout_constraintBottom_toTopOf="@id/botonesLayout"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <!-- Botones modernos -->
            <LinearLayout
                android:id="@+id/botonesLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">


                <ImageButton
                    android:id="@+id/btnExpand"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="12dp"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/expandir_canal"
                    android:src="@android:drawable/ic_input_add"
                    android:background="@android:color/transparent"
                    app:tint="@color/botonesnegrosyblancostexto"
                    />

                <ImageButton
                    android:id="@+id/btn_eliminar_canal"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/eliminar_canal"
                    android:src="@drawable/iconofinaleliminar"
                    android:background="@android:color/transparent"
                    app:tint="@color/botonesnegrosyblancostexto"
                    />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <!-- Contenido expandible moderno -->
    <androidx.cardview.widget.CardView
        android:id="@+id/contentCanal"
        android:layout_width="220dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/colorSurface"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/mainCanalLayout"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@android:color/transparent">

            <!-- Header del contenido expandido -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/canal_config_label"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginBottom="16dp" />



            <!-- Spinners modernos -->
            <!-- MICROFONÍA -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxBackgroundColor="?attr/colorSurface"
                app:endIconMode="none">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/spinnerMicrofonia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_select"
                    android:inputType="none"
                    android:focusable="false"
                    android:clickable="true"
                    android:longClickable="false"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:importantForAutofill="no"
                    android:background="@android:color/transparent"
                    android:drawableEnd="@drawable/ic_microphone"
                    tools:ignore="SpeakableText" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- FX -->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:boxBackgroundColor="?attr/colorSurface">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/spinnerFX"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_select"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
