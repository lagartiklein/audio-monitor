<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0A">

    <!-- ScrollView principal con contenido de bienvenida -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="#0A0A0A">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="24dp">

            <!-- Logo y título de la app -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="32dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/logooficialdemo"
                    android:contentDescription="@string/logo_description"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_title"
                    android:textSize="32sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:fontFamily="@font/futura_heavy"
                    android:letterSpacing="0.1"
                    android:layout_marginTop="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_subtitle"
                    android:textSize="14sp"
                    android:textColor="#B0B0B0"
                    android:layout_marginTop="8dp"
                    android:alpha="0.8"/>
            </LinearLayout>

            <!-- Visualizador decorativo compacto -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="32dp">

                <com.cepalabsfree.fichatech.sonometro.WaveView
                    android:id="@+id/waveView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"/>
            </androidx.cardview.widget.CardView>

            <!-- Sección: Acerca de -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#F4F4F4"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/about_title"
                        android:textSize="18sp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/about_description"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:lineSpacingExtra="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sección: Características principales (ahora con botones) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/features_title"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <!-- Feature: Canales (botón) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCanales"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_channels"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:paddingVertical="16dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#000000"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.Material3.Button.TonalButton"/>

                    <!-- Feature: Planta de Escenario (botón) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPlanta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_stage_plan"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:paddingVertical="16dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#FFEB3B"
                        android:layout_marginBottom="12dp"
                        style="@style/Widget.Material3.Button.TonalButton"/>

                    <!-- Feature: Sonómetro (botón) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSonometro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/btn_audio_monitor"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:paddingVertical="16dp"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#FF4081"
                        style="@style/Widget.Material3.Button.TonalButton"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sección: Novedades -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/news_title"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#0F0F0F"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/news_date"
                            android:textSize="12sp"
                            android:textColor="#FF4081"
                            android:textStyle="bold"
                            android:layout_marginBottom="6dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/news_content"
                            android:textSize="13sp"
                            android:textColor="#B0B0B0"
                            android:lineSpacingExtra="2dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Sección: Desarrollador -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#1A1A1A"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/developer_title"
                        android:textSize="18sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/developer_url"
                        android:textSize="20sp"
                        android:textColor="#FF4081"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/developer_description"
                        android:textSize="14sp"
                        android:textColor="#B0B0B0"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnWebsite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_website"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            app:cornerRadius="8dp"
                            app:backgroundTint="#FF4081"
                            android:layout_marginEnd="8dp"
                            style="@style/Widget.Material3.Button.TonalButton"/>


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnInstagram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_instagram"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            app:cornerRadius="8dp"
                            app:backgroundTint="#802196F3"
                            style="@style/Widget.Material3.Button.TonalButton"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- FAB para ruido rosa (mantener funcionalidad existente) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_noise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/ic_sound_wave"
        app:tint="#FFFFFF"
        app:backgroundTint="#FF4081"
        android:contentDescription="@string/fab_description"/>

</RelativeLayout>