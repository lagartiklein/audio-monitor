<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_verification_email"
        android:text="@string/verify_email"
        android:textSize="18sp"
        android:layout_marginBottom="24dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_check_verification"
            android:text="@string/already_verified"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:backgroundTint="@color/botonesnegrosyblancos"
        android:textColor="@color/botonesnegrosyblancostexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
