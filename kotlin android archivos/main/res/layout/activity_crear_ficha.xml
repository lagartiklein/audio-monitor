<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fichatecnica.CrearFichaActivity">

    <!-- AppBarLayout para la Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ConstraintLayout principal envuelto en NestedScrollView para soporte de teclado edge-to-edge -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="ifContentScrolls"
        android:isScrollContainer="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- ConstraintLayout principal -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            >

            <!-- Agrupación horizontal de nombre y descripción -->
            <LinearLayout
                android:id="@+id/layoutNombreDescripcion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <EditText
                    android:id="@+id/etNombreFicha1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/futura_heavy"
                    android:textSize="14sp"
                    android:background="@drawable/bg_neon_border"
                    android:hint="@string/nombreficha"
                    android:textColor="@color/botonesnegrosyblancos"
                    android:textColorHighlight="@color/botonesnegrosyblancostexto"
                    android:textColorHint="@color/botonesnegrosyblancos"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:autofillHints="name"
                    />

                <EditText
                    android:id="@+id/etDescripcionFicha1"
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/futura_heavy"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/bg_neon_border"
                    android:textColor="@color/botonesnegrosyblancos"
                    android:textColorHighlight="@color/botonesnegrosyblancostexto"
                    android:textColorHint="@color/botonesnegrosyblancos"
                    android:hint="@string/descripcion"
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:autofillHints="none"
                    />
            </LinearLayout>

            <!-- RecyclerView para los canales -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCanales"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:minHeight="150dp"
                android:isScrollContainer="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toTopOf="@+id/buttonContainer"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutNombreDescripcion"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_canal" />

            <!-- LinearLayout para los botones de acción -->
            <LinearLayout
                android:id="@+id/buttonContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp"
                android:clipChildren="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <!-- Botón Guardar Ficha - IMAGEBUTTON -->
                <ImageButton
                    android:id="@+id/btnGuardar"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_save"
                    android:background="@color/botonesnegrosyblancos"
                    app:tint="@color/botonesnegrosyblancostexto"
                    android:contentDescription="@string/guardar"
                    android:scaleType="centerInside"
                    android:padding="12dp"
                   />

                <!-- Botón Agregar Canal - IMAGEBUTTON -->
                <ImageButton
                    android:id="@+id/btnAgregarCanal"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginStart="16dp"
                    android:src="@drawable/ic_mascinco"
                    android:background="@color/botonesnegrosyblancos"
                    app:tint="@color/botonesnegrosyblancostexto"
                    android:contentDescription="@string/agregar_canal"
                    android:scaleType="centerInside"

                    android:padding="12dp"
                    />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>