<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:id="@+id/tvAnimBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_title"
        android:textSize="26sp"
        android:textStyle="bold"
        android:alpha="0"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/tvBienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_question"
        android:textSize="20sp"
        android:layout_marginBottom="32dp"
        android:alpha="0"/>

    <Button
        android:id="@+id/btnListasCanales"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/channel_lists"
        android:layout_marginBottom="16dp"
        android:alpha="0"/>

    <Button
        android:id="@+id/btnPlantasEscenario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stage_plans"
        android:layout_marginBottom="16dp"
        android:alpha="0"/>

    <Button
        android:id="@+id/btnMonitorWifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/audio_monitor"
        android:alpha="0"/>

</LinearLayout>
