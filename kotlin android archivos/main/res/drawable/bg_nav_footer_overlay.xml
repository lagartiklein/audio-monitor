<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo blanco sólido -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/botonesnegrosyblancos"/>
        </shape>
    </item>
    <!-- Sombra superior para separar visualmente del menú -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#22000000"
                android:endColor="@android:color/transparent"
                android:angle="270"/>
        </shape>
        <padding android:top="0dp" android:bottom="32dp"/>
    </item>
</layer-list>

