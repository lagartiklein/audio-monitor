<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/native_audio_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"

    android:fillViewport="true">

    <LinearLayout
        android:id="@+id/native_audio_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="0dp"
        android:paddingBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#000000"
            android:layout_marginTop="16dp"

            android:padding="0dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/statusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FICHATECH MONITOR"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:layout_marginTop="16dp"

                android:textStyle="bold"
                android:gravity="center"
                android:padding="12dp"/>



        </LinearLayout>

        <!-- Connection Settings -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#000000"
            android:padding="16dp"
            android:layout_marginBottom="10dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŒ CONEXIÃ“N"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <!-- IP y Puerto en la misma fila -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IP:"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/ipEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="192.168.1.100"
                    android:textColor="#ffffff"
                    android:textColorHint="#cccccc"
                    android:inputType="textNoSuggestions|text"
                    android:background="#333333"
                    android:padding="12dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:imeOptions="actionNext"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Puerto:"
                    android:textColor="#ffffff"
                    android:textSize="14sp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"/>

                <EditText
                    android:id="@+id/portEditText"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="5101"
                    android:textColor="#ffffff"
                    android:inputType="number"
                    android:background="#333333"
                    android:padding="12dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:imeOptions="actionDone"/>

            </LinearLayout>

            <!-- Connect Button -->
            <Button
                android:id="@+id/connectButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conectar"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:padding="14dp"
                android:backgroundTint="@android:color/holo_red_light"
                android:elevation="4dp"/>

        </LinearLayout>

        <!-- Master Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#000000"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Master"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <!-- Volume Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Volumen:"
                    android:textColor="#ffffff"
                    android:textSize="14sp"/>

                <SeekBar
                    android:id="@+id/masterVolumeSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:max="72"
                    android:progress="60"
                    android:progressTint="#00ff00"
                    android:thumbTint="#ffffff"/>

                <TextView
                    android:id="@+id/masterVolumeText"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="0 dB"
                    android:textColor="#00ff00"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="end"/>

            </LinearLayout>

            <!-- Mute Button -->
            <Button
                android:id="@+id/muteButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”Š Audio ON"
                android:textSize="16sp"
                android:textColor="#ffffff"
                android:backgroundTint="#00aa00"
                android:padding="12dp"/>

        </LinearLayout>

        <!-- Info Display -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#000000"
            android:padding="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š INFORMACIÃ“N"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:id="@+id/infoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Conecta a la misma red WiFi que el servidor\nâ€¢ MantÃ©n el punto de acceso cerca del escenario y sistema. "
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:lineSpacingExtra="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="70dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="#000000"
                    android:clickable="true"
                    android:focusable="true">



                    <TextView
                        android:id="@+id/latencyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- ms"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:longClickable="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Latencia Android"
                        android:textColor="#cccccc"
                        android:textSize="9sp"
                        android:layout_marginTop="2dp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
