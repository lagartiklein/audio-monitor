<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/native_audio_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    android:padding="0dp">

    <!-- Header con latencia - MINIMAL -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#000000"
        android:padding="12dp"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="0dp">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â­• Fichatech"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="start"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latencia"
                android:textColor="#cccccc"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/latencyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-- ms"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:clickable="true"
                android:focusable="true"
                android:longClickable="true"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Channel Console - OCUPA TODO EL ESPACIO DISPONIBLE -->
    <LinearLayout
        android:id="@+id/native_audio_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#000000"
        android:padding="8dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/channelStripContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:baselineAligned="false" />

    </LinearLayout>

    <!-- Hidden views for compatibility -->
    <TextView
        android:id="@+id/webControlText"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/infoText"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

    <TextView
        android:id="@+id/channelMixerScroll"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"/>

</LinearLayout>
