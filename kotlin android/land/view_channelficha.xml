<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="110dp"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:layout_margin="4dp"
    android:background="@color/botonesnegrosyblancos"
    android:elevation="4dp">

    <!-- Header: Canal y botón ON/OFF -->
    <TextView
        android:id="@+id/channelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/channel_label"
        android:textColor="@color/botonesnegrosyblancostexto"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/powerButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:text="@string/channel_off"
        android:textColor="@color/colorText"
        android:textSize="12sp"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/channelLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Indicador visual de canal silenciado (mute) -->
    <ImageView
        android:id="@+id/muteIndicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@android:drawable/ic_lock_silent_mode"
        android:contentDescription="@string/mute_indicator_description"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="4dp"
        app:tint="#ff0000" />

    <!-- Cuerpo: Fader y VU Meter - Ocupa todo el espacio disponible -->
    <FrameLayout
        android:id="@+id/faderVuContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/powerButton"
        app:layout_constraintBottom_toTopOf="@id/volumeValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Fader con VU Meter integrado - Solo movimiento del thumb -->
        <com.google.android.material.slider.Slider
            android:id="@+id/volumeSlider"
            android:layout_width="178dp"
            android:layout_height="match_parent"
            android:rotation="270"
            android:value="0"
            android:valueFrom="-60"
            android:valueTo="12"
            android:layout_gravity="center"
            android:hapticFeedbackEnabled="false"
            android:isScrollContainer="true"
            app:haloColor="@color/fader_halo"
            app:thumbTint="@color/fader_thumb"
            app:trackColorActive="@color/fader_active"
            app:trackColorInactive="@color/fader_inactive"
            app:labelBehavior="gone" />
    </FrameLayout>

    <!-- Valor de volumen en dB -->
    <TextView
        android:id="@+id/volumeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_db_value"
        android:textColor="@color/botonesnegrosyblancostexto"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/panSliderContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"/>

    <!-- Pan Slider con área de toque ampliada -->
    <FrameLayout
        android:id="@+id/panSliderContainer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/panValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="4dp">
        <com.google.android.material.slider.Slider
            android:id="@+id/panSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="-100"
            android:valueTo="100"
            android:value="0"
            android:hapticFeedbackEnabled="false"
            android:isScrollContainer="true"
            app:thumbTint="@color/pan_thumb"
            app:trackColorActive="@color/pan_active"
            app:trackColorInactive="@color/pan_inactive"
            app:haloColor="@color/pan_halo"
            app:labelBehavior="gone"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    </FrameLayout>

    <!-- Indicador de posición del panorama -->
    <TextView
        android:id="@+id/panValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_pan_center"
        android:textColor="@color/channel_inactive_text"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

    <!--
    Cambios realizados:
    - android:layout_height cambiado de wrap_content a match_parent para ocupar todo el alto
    - El faderVuContainer ahora usa layout_height="0dp" con constraints top y bottom para expandirse
    - Los elementos inferiores (volumeValue, panSlider, panValue) ahora están anclados al bottom
    - Eliminado el FrameLayout innecesario con altura fija de 190dp
    - El slider vertical ahora se expande para ocupar todo el espacio disponible entre el botón y el valor de volumen

    Notas para integración lógica:
    - Usar setOnTouchListener en los sliders para llamar requestDisallowInterceptTouchEvent(true)
    - Usar listeners (addOnChangeListener) para enviar cambios de volumen/pan al servidor, con debounce
    - Cambiar fondo y colores según estado (activo/inactivo/mute) dinámicamente
    - Usar animaciones para feedback visual
    - Los drawables y colores referenciados deben crearse en res/drawable y res/color
    -->