<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="110dp"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:layout_margin="4dp"
    android:background="@color/botonesnegrosyblancos"
    android:elevation="4dp">

    <!-- Header: Canal y botón ON/OFF -->
    <TextView
        android:id="@+id/channelLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/channel_label"
        android:textColor="@color/botonesnegrosyblancostexto"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/powerButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:text="@string/channel_off"
        android:textColor="@color/colorText"
        android:textSize="12sp"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toBottomOf="@id/channelLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Cuerpo: Fader y VU Meter -->
    <FrameLayout
        android:id="@+id/faderVuContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/powerButton">

        <!-- Fader con VU Meter integrado -->
        <FrameLayout
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.google.android.material.slider.Slider
                android:id="@+id/volumeSlider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="0dp"
                android:paddingTop="100dp"
                android:paddingEnd="0dp"
                android:paddingBottom="20dp"
                android:rotation="270"
                android:value="0"
                android:valueFrom="-60"
                android:valueTo="12"
                app:haloColor="@color/fader_halo"
                app:thumbTint="@color/fader_thumb"
                app:trackColorActive="@color/fader_active"
                app:trackColorInactive="@color/fader_inactive" />
        </FrameLayout>
    </FrameLayout>

    <!-- Valor de volumen en dB -->
    <TextView
        android:id="@+id/volumeValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_db_value"
        android:textColor="@color/botonesnegrosyblancostexto"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/faderVuContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Pan Slider con área de toque ampliada -->
    <FrameLayout
        android:id="@+id/panSliderContainer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/volumeValue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp">
        <com.google.android.material.slider.Slider
            android:id="@+id/panSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="-100"
            android:valueTo="100"
            android:value="0"
            app:thumbTint="@color/pan_thumb"
            app:trackColorActive="@color/pan_active"
            app:trackColorInactive="@color/pan_inactive"
            app:haloColor="@color/pan_halo"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    </FrameLayout>

    <!-- Indicador de posición del panorama -->
    <TextView
        android:id="@+id/panValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_pan_center"
        android:textColor="@color/channel_inactive_text"
        android:textSize="11sp"
        app:layout_constraintTop_toBottomOf="@id/panSliderContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="2dp"/>

    <!-- Indicador visual de canal silenciado (mute) -->
    <ImageView
        android:id="@+id/muteIndicator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@android:drawable/ic_lock_silent_mode"
        android:contentDescription="@string/mute_indicator_description"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="4dp"
        app:tint="#ff0000" />

</androidx.constraintlayout.widget.ConstraintLayout>

    <!--
    Notas para integración lógica:
    - En el código, usar setOnTouchListener en los sliders para llamar requestDisallowInterceptTouchEvent(true) al detectar gestos, evitando interferencia con scroll.
    - Usar listeners (addOnChangeListener) para enviar cambios de volumen/pan al servidor, con debounce para evitar spam.
    - Cambiar fondo y colores según estado (activo/inactivo/mute) dinámicamente.
    - Usar animaciones para feedback visual (por ejemplo, alpha en peakIndicator, transición de colores en VU meter).
    - Los drawables y colores referenciados deben crearse en res/drawable y res/color.
    -->
